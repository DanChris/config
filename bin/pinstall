#!/bin/bash

#script to fast install packages on debian-based distributions
#TODO <Tab> to autocomplete packages name 

#_mys () {
#  COMPREPLY=$(apt-cache --no-generate pkgnames "$2")
#}
#complete -F _mys mys

if [ "$1" == "" ]; then 
    echo "Please give at least one package as argument to install"
    exit 1
else
    sudo apt-get -y update
    for var in "$@"
    do 
        sudo apt-get install -y $var
    done
fi 
